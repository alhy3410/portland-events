<%= form_for [@message] do |f| %>
<%= f.label :to, "Phone Number To Send To: " %>
<%= f.text_field :to, :size => 10 %>
<br><br>
<%= f.label :from, "From: " %>
<%= f.text_field :from %>
<br><br>
<%= f.label :body, "Message: " %>
<%= f.text_field :body, :size => 20 %>
<br><br>
<%= f.submit %>
<% end %>
