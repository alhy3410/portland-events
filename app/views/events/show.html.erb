<div class="individualevent">
  <h1>Event: <%= @event.eventname %></h1>
  <hr>
  <div class="event-details">
    <h2>Person to contact: <%= @event.eventperson %></h2>
    <hr>
    <h4>Event Date: <%= @event.eventdate %></h4>
    <h4>Event Location: <%= @event.eventlocation %></h4>

    <div class="event-info-details">
        <h4>Event Details: <%= @event.eventinfo %></h4>
    </div>
  </div>
</div>
<div class="event-actions">
  <% if current_user %>
   <% if current_user.admin == true %>
     <%= link_to "Edit event", edit_event_path(@event) %> ||
     <%= link_to "Delete event", event_path(@event),
     :data => {:confirm => "Are you sure you want to delete this event?",
       :method => "delete"} %>
   <% end %>
  <% end %> 
 </div>
